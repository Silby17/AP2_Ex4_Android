<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUsernameLogin"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        android:layout_alignLeft="@+id/txtPasswordLogin"
        android:layout_alignStart="@+id/txtPasswordLogin"
        android:layout_alignRight="@+id/btnSubmitLogin"
        android:layout_alignEnd="@+id/btnSubmitLogin"
        android:hint="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPasswordLogin"
        android:layout_below="@+id/txtUsernameLogin"
        android:layout_centerHorizontal="true"
        android:hint="Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSubmitLogin" />

</LinearLayout>